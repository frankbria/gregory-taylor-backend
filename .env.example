# Gregory Taylor Backend - Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Database
# ===================
MONGODB_URI=mongodb://localhost:27017/gregory-taylor

# ===================
# Authentication (Better Auth)
# ===================
# Generate a random secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here-min-32-chars

# ===================
# Admin API Authentication
# ===================
# Token used by admin dashboard to authenticate API requests
# NEXT_PUBLIC_ prefix required for client-side access
# Generate a random key: openssl rand -hex 32
NEXT_PUBLIC_ADMIN_API_KEY=your-admin-api-key-here

# ===================
# Stripe
# ===================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# ===================
# Cloudinary (Image Storage)
# ===================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===================
# CORS
# ===================
# Comma-separated list of allowed origins for API requests
# Example: https://yourdomain.com,http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000
